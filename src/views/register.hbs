<body class="hold-transition register-page">
<div class="register-box">
    <div class="register-logo">
        <a href="#">{{ appname }}</a>
    </div>
    {{# if attempt }}
        <div class="alert alert-danger">
            <p>Couldn't register, the following errors occured :</p>
            <ul>
                {{# each errors }}
                    <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </div>
    {{/if}}
    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new membership</p>

            <form action="#" method="post">
                <div class="input-group form-group has-feedback">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    {{# if attempt }}
                        <input type="text" class="form-control" placeholder="First name" name="first_name" value="{{ data.first_name }}">
                    {{ else }}
                        <input type="text" class="form-control" placeholder="First name" name="first_name">
                    {{/if}}
                </div>
                <div class="input-group form-group has-feedback">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    {{# if attempt }}
                        <input type="text" class="form-control" placeholder="Last name" name="last_name" value="{{ data.last_name }}">
                    {{ else }}
                        <input type="text" class="form-control" placeholder="Last name" name="last_name">
                    {{/if}}
                </div>
                <div class="input-group form-group has-feedback">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    </div>
                    {{# if attempt }}
                        <input type="email" class="form-control" placeholder="Email" name="email" value="{{ data.email }}">
                    {{ else }}
                        <input type="email" class="form-control" placeholder="Email" name="email">
                    {{/if}}
                </div>
                <div class="input-group form-group has-feedback">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
                <div class="input-group form-group has-feedback">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="Retype password" name="confirmPassword">
                </div>
                <div class="form-group checkbox icheck">
                    <label>
                        <input type="checkbox" name="terms"> I agree to the <a href="#">terms</a>
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </div>
            </form>
            <div class="form-group">
                <p class="text-center">
                    <a href="/access/login" class="text-center">I already have a membership</a>
                </p>
            </div>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->

<!-- jQuery -->
<script src="/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- iCheck -->
<script src="/plugins/iCheck/icheck.min.js"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass   : 'iradio_square-blue',
            increaseArea : '20%' // optional
        })
    })
</script>
</body>
