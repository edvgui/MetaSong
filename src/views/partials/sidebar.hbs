<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/app" class="brand-link">
        <span class="brand-text font-weight-light">{{ appname }}</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                {{#sidebarItems }}{{/sidebarItems}}
                {{# each sidebarItems }}
                    {{# ifVisible ../admin this.admin}}
                        <li class="nav-item">
                            {{# if this.subs }}
                                {{# ifActive ../urlRequested this.url }}
                                    <a href="#" class="nav-link active">
                                        <i class="nav-icon {{ this.icon }}"></i>
                                        <p>
                                            {{ this.name }}
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>
                                {{ else }}
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon {{ this.icon }}"></i>
                                        <p>
                                            {{ this.name }}
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>
                                {{/ifActive}}
                                <ul class="nav nav-treeview">
                                    {{# each this.subs }}
                                        {{# ifVisible ../../admin this.admin}}
                                            {{# ifActive ../../urlRequested this.url }}
                                                <li class="nav-item active">
                                                    <a href="{{ this.url }}" class="nav-link">
                                                        <i class="fa fa-circle-o nav-icon"></i>
                                                        <p>{{ this.name }}</p>
                                                    </a>
                                                </li>
                                            {{ else }}
                                                <li class="nav-item">
                                                    <a href="{{ this.url }}" class="nav-link">
                                                        <i class="fa fa-circle-o nav-icon"></i>
                                                        <p>{{ this.name }}</p>
                                                    </a>
                                                </li>
                                            {{/ifActive}}
                                        {{/ifVisible }}
                                    {{/each}}
                                </ul>
                            {{ else }}
                                {{# ifActive ../urlRequested this.url }}
                                    <a href="{{ this.url }}" class="nav-link active">
                                        <i class="nav-icon {{ this.icon }}"></i>
                                        <p>
                                            {{ this.name }}
                                        </p>
                                    </a>
                                {{ else }}
                                    <a href="{{ this.url }}" class="nav-link">
                                        <i class="nav-icon {{ this.icon }}"></i>
                                        <p>
                                            {{ this.name }}
                                        </p>
                                    </a>
                                {{/ifActive}}
                            {{/if}}
                        </li>
                    {{/ifVisible}}
                {{/each}}

                {{# if admin }}
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fa fa-upload"></i>
                            <p>
                                Admin zone
                                <i class="right fa fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/admin/outputs" class="nav-link">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>Outputs</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/uploads" class="nav-link">
                                    <i class="fa fa-circle-o nav-icon"></i>
                                    <p>Uploads</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                {{/if}}
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>